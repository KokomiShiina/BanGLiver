<Window x:Class="BanGLiver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BanGLiver"
        mc:Ignorable="d"
        Title="BanG Liver" Height="86.815" Width="525">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="NowPlaying" IsEnabled="False" Text="Now Playing..." HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,5,0" />
        <Button x:Name="StartButton" Grid.Column="1" Content="Start" Click="StartButton_Click" Margin="0" />
    </Grid>
</Window>
